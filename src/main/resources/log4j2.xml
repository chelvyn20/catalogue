<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="5" status="debug" strict="true" packages="id.co.nds.webapp.loggermask">
    <Properties>
        <Property name="log-path">E:/NDS/logs</Property>
        <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log-pattern}" />
        </Console>

        <File name="MyFile" fileName="${log-path}/application.log">
            <PatternLayout pattern="${log-pattern}" />
        </File>

        <RollingFile name="RollingFile" fileName="${log-path}/nds-catalogue-all.log" filePattern="${log-path}/nds-catalogue-all-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log-pattern}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2 MB" />
            </Policies>
            <DefaultRolloverStrategy max="90" />
        </RollingFile>
        <RollingFile name="RollingFile" fileName="${log-path}/nds-catalogue-sch1.log" filePattern="${log-path}/nds-catalogue-sch1-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log-pattern}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2 MB" />
            </Policies>
            <DefaultRolloverStrategy max="90" />
        </RollingFile>
        <RollingFile name="RollingFile" fileName="${log-path}/nds-catalogue-sch2.log" filePattern="${log-path}/nds-catalogue-sch2-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log-pattern}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2 MB" />
            </Policies>
            <DefaultRolloverStrategy max="90" />
        </RollingFile>
        <RollingFile name="RollingFile" fileName="${log-path}/nds-catalogue-sch3.log" filePattern="${log-path}/nds-catalogue-sch3-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log-pattern}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="2 MB" />
            </Policies>
            <DefaultRolloverStrategy max="90" />
        </RollingFile>
    </appenders>

    <loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
        <Logger name="id.co.nds.catalogue.schedulers.FixedRate" level="debug">
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="sch1RollingFile" />
        </Logger>
    </loggers>


</configuration>